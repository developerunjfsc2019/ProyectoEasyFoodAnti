<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@color/colorPrimario"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_dialogcontrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="@string/confirmacion_asistencia"
        android:textColor="@color/colorPalabras"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/imageButtonContrasena"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimario"
        android:padding="14dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:scrollbarDefaultDelayBeforeFade="400"
        app:srcCompat="@drawable/exito_easyfood" />

</LinearLayout>